<%= render "shared/second_header" %>
<div class="contents row">
  <div class="container">
    <h3>トレーニングメニューを編集する</h3>
    <%= render 'shared/error_messages', model: @training_menu %>
    <%= form_with(model: @training_menu, local: true) do |form| %>
      トレーニングメニューの名前
      <%= form.text_field :name%>
      鍛えられるところ
      <%= form.collection_select(:muscle_category_id, MuscleCategory.all, :id, :name, {}, {}) %>
      メニューの説明、補足
      <%= form.text_area :explanation, rows: "10" %>
      <%= form.submit "更新する" %>
      <%=link_to 'もどる',  training_menu_path(@training_menu.id), class:"back-btn" %>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>


    
      
